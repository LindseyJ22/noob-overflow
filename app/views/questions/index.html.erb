<% if current_user.badge == nil %>
	<ul class="collapsible" data-collapsible="accordion">
    <li>
      <div class="collapsible-header active"></div>
      <div class="collapsible-body" style="text-align: center;">
      	<span>
	      	New to Noob Overflow? Take our tutorial to learn about participating in this exciting community for noobs and earn your first badge!

					<br>
					<br>

		      <%= link_to "Start Tutorial", tutorials_path, class: "waves-effect waves-light btn" %>
			  </span>
      </div>
    </li>
    <li>
      <div class="collapsible-header"></div>
    </li>
  </ul>
<% end %>



<ul id="tabs-swipe-demo" class="tabs">
  <li class="tab col s3"><a href="#test-swipe-1">Recently Asked</a></li>
  <li class="tab col s3"><a class="active" href="#test-swipe-2">Most Popular</a></li>
  <li class="tab col s3"><a href="#test-swipe-3">Dumbest</a></li>
</ul>
<div id="test-swipe-1" class="col s12">
	<h1>Recently Asked Questions</h1>


	<% @questions.each do |question| %>
		<div class="questions">
			<div class="row question">
				<%= link_to question do %>
		  	<div class="col s10 offset-s1 index-card">
		    	<div class="card hoverable">
							<%= render question, full: true %>
					</div>
				</div>
				<% end %>
			</div>
		</div>
  <% end %>
</div>

