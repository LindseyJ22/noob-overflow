<div class="post_wrapper">
	<div class="post_content">

		<div class="vote-box">
			<div class="upvote"></div>
			<div class="rep-value">2</div>
			<div class="downvote"></div>
			<div class="star-button"></div>
		</div>

		<% if local_assigns[:full] %>
		<% else %>
			<div style="float: right;">
			  <% if post.user.id == current_user.id %>
			    <%= link_to "Edit Post", edit_post_path(post) %>
			    <%= link_to "Delete", post, method: :delete, remote: true, class: 'post_delete' %>
			  <% end %>
		  </div>
		<% end %>

		<p style="text-align: center; font-size: 2em;"> 
			<%= post.title %> 
		</p>
		<p>
		<% if local_assigns[:full] %>
			<%= markdown(post.content) %>
		<% else %>
			<%= markdown(post.content) %>
		<% end %>
		</p>
		<br>
		<div class="row">
			<small class="col s3 offset-s9">
				Posted by:
				<% if params[:id].nil? %>
					<% if post.user.deleted_at.nil? %>
						<%= post.user.username %>
					<% else %>
						DELETED
					<% end %>
				<% else %>
					<% if post.user.deleted_at.nil? %>
						<%= render partial: 'users/user', locals: {user: post.user} %>
					<% else %>
						DELETED
					<% end %>
				<% end %>
				<%= post.created_at.strftime("on %m/%d/%Y") %> 
				<%= post.created_at.strftime("at %I:%M%p") %>
			</small>
		</div>
	</div>
</div>
