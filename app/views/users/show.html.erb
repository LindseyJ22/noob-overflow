<div class="container">
  <div class="row">
    <div class="col s9 offset-s2">
			<div id="user_wrapper" class="card blue-grey lighten-5">
				<!-- checks if the account has been soft deleted -->
				<% if @user.deleted_at.nil? %>
			
					<div class="name_photo">
						<h3><%= @user.username %></h3>
						<% if @user.avatar? %>
							<%= image_tag @user.avatar.url(:medium) %>
						<% end %>
					</div>
					<div class="badges">
						<!-- if we get here -->
					</div>
					<div class="aboot">
						<ul>
							<li>Questions Asked: <%= @user.questions.count  %></li>
							<li>Answers Given: <%= @user.answers.count  %></li>
							<li>Comments Made: <%= @user.comments.count  %></li>
							<li>Current Reputation: <%= @user.reputation %></li>

						</ul>
							<% if @user.about? %>
								<p> <b>About <%= @user.username %>:</b> <br>
									<%= @user.about %>
								</p>
							<% end %>
					</div>
				<% else %>
					<h3 class='user_has_deleted red-text'><%= @user.username %> has deleted their account</h3>
				<% end %>

			</div>
    </div>
  </div>
</div>


<% if @user.deleted_at.nil? %>
	<ul class="collapsible" data-collapsible="accordion">
	  <li>
	    <div class="collapsible-header">
	    	<div class="profile_pic_wrapper">
	    		<%= image_tag @user.avatar.url(:medium), class: "profile_pic" %>
	    	</div>
	    	<i class="material-icons">filter_drama</i>
	    	<%= @user.username %></div>
	    <div class="collapsible-body">
	    	<span>
	    		<% if @user.about? %>
	    			<%= @user.about %>
	    		<% else %>
	    			<p>This person is very mysterious...</p>
	    		<% end %>
	    	</span>
	    </div>
	  </li>
	  <li>
	    <div class="collapsible-header"><i class="material-icons">place</i>Second</div>
	    <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
	  </li>
	  <li>
	    <div class="collapsible-header"><i class="material-icons">whatshot</i>Third</div>
	    <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
	  </li>
	</ul>
<% end %>